{
  "name": "en10168-schemas",
  "version": "0.4.0",
  "description": "EN10168 JSON schema and dependencies developed by S1Seven",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thematerials-network/EN10168-schemas.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thematerials-network/EN10168-schemas/issues"
  },
  "homepage": "https://github.com/thematerials-network/EN10168-schemas#readme",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./*.js",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"**/*.{js,json}\"",
    "test": "jest --runInBand",
    "update-version": "node ./utils/update-version.js",
    "set-local-paths": "node ./utils/set-local-paths.js",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it",
    "release:dry-run": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it --dry-run",
    "generate-html": "node ./utils/generate-html-cli",
    "generate-pdf": "node ./utils/generate-pdf-cli"
  },
  "devDependencies": {
    "@markedjs/html-differ": "^3.0.4",
    "@s1seven/schema-tools-generate-html": "^0.4.1",
    "@s1seven/schema-tools-generate-pdf": "^0.2.3",
    "@s1seven/schema-tools-utils": "^0.2.3",
    "@s1seven/schema-tools-versioning": "^0.5.2",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "handlebars": "^4.7.7",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "pdf2pic": "^2.1.4",
    "pre-commit": "^1.2.2",
    "prettier": "2.6.2",
    "release-it": "*"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint"
    ]
  },
  "pre-commit": [
    "lint:staged"
  ],
  "release-it": {
    "github": {
      "release": true,
      "requireBranch": "main"
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm run test"
      ],
      "after:bump": "npm run update-version -- v${version} ${name}",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "jest": {
    "rootDir": ".",
    "maxConcurrency": 2,
    "testRegex": ".*\\.spec\\.js$",
    "moduleFileExtensions": [
      "js",
      "node"
    ]
  }
}
